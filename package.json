{
  "name": "@littlecornerdev/cnsi",
  "version": "0.0.3",
  "description": "Chrome extension for identifying hex code, possible name, and possible wardrobe season for any pixel in the current tab page",
  "config": {
    "zipfile": "dist/cnsi.zip"
  },
  "main": "dist/cnsi.zip",
  "directories": {
    "build": "build",
    "dist": "dist",
    "source": "source",
    "test": "test"
  },
  "files": [
    "dist"
  ],
  "type": "commonjs",
  "publishConfig": {
    "access": "restricted",
    "verbose": true
  },
  "scripts": {
    "bump-version-major": "npm version major -m 'chore(vcs): Bump version to %s'",
    "bump-version-minor": "npm version minor -m 'chore(vcs): Bump version to %s'",
    "bump-version-patch": "npm version patch -m 'chore(vcs): Bump version to %s'",
    "ci": "npm run test && npm run lint && npm run format",
    "cd": "npm run ci && npm run pack",
    "cz": "cz",
    "dist": "cd source/ && bestzip ../$npm_package_config_zipfile *",
    "format": "prettier . --write",
    "lint": "npm run lint-css && npm run lint-js",
    "lint-css": "stylelint 'source/**/*.css' --fix",
    "lint-js": "eslint 'source/**/*.js' --fix && eslint 'test/**/*.js' --fix",
    "login": "npm login --registry=https://npm.pkg.github.com --scope=@littlecornerdev",
    "pack": "npm run dist && npm pack",
    "publish-dist": "npm run dist && dotenv cws-publish %GOOGLE_CLIENT_ID% %GOOGLE_CLIENT_SECRET% %GOOGLE_REFRESH__TOKEN% ./$npm_package_config_zipfile %GOOGLE_EXTENSION_ID%",
    "publish-package": "npm run dist && npm publish",
    "test": "jest",
    "upload-dist": "npm run dist && dotenv cws-upload %GOOGLE_CLIENT_ID% %GOOGLE_CLIENT_SECRET% %GOOGLE_REFRESH__TOKEN% ./$npm_package_config_zipfile %GOOGLE_EXTENSION_ID%",
    "preversion": "npm run cd",
    "version": "npm run publish-package",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LittleCornerDev/chrome-ColorNameSeasonIdentifier.git"
  },
  "keywords": [
    "chrome",
    "browser",
    "extension",
    "color",
    "season"
  ],
  "author": "LittleCornerDev",
  "license": "SEE LICENSE IN LICENSE.txt",
  "bugs": {
    "url": "https://github.com/LittleCornerDev/chrome-ColorNameSeasonIdentifier/issues"
  },
  "homepage": "https://github.com/LittleCornerDev/chrome-ColorNameSeasonIdentifier#readme",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "bestzip": "^2.2.1",
    "commitizen": "^4.3.0",
    "cws-publish": "^2.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "3.2.5",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0"
  }
}